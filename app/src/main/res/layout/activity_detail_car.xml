<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/icon_cart_rounded"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_info_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fortuner"
                        android:textSize="20sp"
                        android:textColor="@color/outline_text"
                        android:fontFamily="sans-serif-black"/>

                    <TextView
                        android:id="@+id/tv_jenisMobil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedan"
                        android:textSize="15sp"
                        android:textColor="@color/outline_text"/>

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/car1"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Car Info"
                    android:textSize="16sp"
                    android:textColor="@color/outline_text"
                    android:paddingRight="20dp"
                    android:textStyle="bold"
                    android:layout_margin="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/baseline_account_circle_24"/>

                                <TextView
                                    android:id="@+id/tvPassanger"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/_5"
                                    android:textSize="16sp"
                                    android:textColor="@color/outline_text"
                                    android:textStyle="bold"
                                    android:layout_marginRight="35dp"
                                    android:textAlignment="center"
                                    android:padding="2dp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/penumpang"
                                android:textSize="16sp"
                                android:textColor="@color/outline_text"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:padding="2dp"
                                android:layout_marginEnd="10dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_winter"/>

                                <TextView
                                    android:id="@+id/tvCooler"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/_5"
                                    android:textSize="16sp"
                                    android:textColor="@color/outline_text"
                                    android:textStyle="bold"
                                    android:layout_marginRight="35dp"
                                    android:textAlignment="center"
                                    android:padding="2dp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/air_conditioner"
                                android:textSize="16sp"
                                android:textColor="@color/outline_text"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:padding="2dp"
                                android:layout_marginEnd="10dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_tuas"/>

                                <TextView
                                    android:id="@+id/tvTransmisi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/_5"
                                    android:textSize="16sp"
                                    android:textColor="@color/outline_text"
                                    android:textStyle="bold"
                                    android:layout_marginRight="35dp"
                                    android:textAlignment="center"
                                    android:padding="2dp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Transmisi"
                                android:textSize="16sp"
                                android:textColor="@color/outline_text"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:padding="2dp"
                                android:layout_marginEnd="10dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_car_door"/>

                                <TextView
                                    android:id="@+id/tvJlhPintu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/_5"
                                    android:textSize="16sp"
                                    android:textColor="@color/outline_text"
                                    android:textStyle="bold"
                                    android:layout_marginRight="35dp"
                                    android:textAlignment="center"
                                    android:padding="2dp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Jumlah Pintu"
                                android:textSize="16sp"
                                android:textColor="@color/outline_text"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:padding="2dp"
                                android:layout_marginEnd="10dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick Up"
                    android:textSize="16sp"
                    android:textColor="@color/outline_text"
                    android:paddingRight="20dp"
                    android:textStyle="bold"
                    android:layout_margin="15dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_loc"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/lokasi"
                                android:textSize="16sp"
                                android:textColor="@color/outline_text"
                                android:textStyle="bold"
                                android:layout_marginRight="35dp"
                                android:textAlignment="center"
                                android:padding="2dp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvLokasi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/lokasi"
                            android:textSize="16sp"
                            android:textColor="@color/outline_text"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:padding="2dp"
                            android:layout_marginEnd="10dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pesan"
            app:shapeAppearanceOverlay="@style/button"
            android:backgroundTint="#002B5B"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>
